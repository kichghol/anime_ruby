<div class="container">
<h1>Sign up</h1>
<%= form_with(url: success_path, method: 'post', local: true) do %>
  <div class="form-group row">
		<%= label_tag :username, 'Username '%>
			<%= text_field_tag :username, nil, placeholder: 'John', class: 'form-control', :required => true %>
  </div>
  <div class="form-group row">
		<%= label_tag :password, 'Password'%>
			<%= password_field_tag :password, nil, placeholder: '', class: 'form-control', :required => true %>
  </div>
  <div class="form-group row">
		<%= label_tag :password_confirmation, 'Password Confirmation'%>
			<%= password_field_tag :password_confirmation, nil, placeholder: '', class: 'form-control', :required => true %>
  </div>
  <div class="form-group row">
			<%= button_tag 'Sign Up', class: 'btn btn-primary' %>
  </div>
<% end %>
</div>
